{
  "manifest_version": 3,
  "name": "FormSage",
  "version": "2.0.0",
  "description": "Auto-answer Google Forms quizzes using Gemini AI",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://docs.google.com/forms/*",
    "https://formsage-bfemfzcwegg0a2bn.malaysiawest-01.azurewebsites.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/forms/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "FormSage - Auto Answer Google Forms",
    "default_popup": "popup.html",
    "default_icon": {
      "1024": "icons/icon.png"
    }
  },
  "icons": {
    "1024": "icons/icon.png"
  }
}